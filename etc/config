# List of the files that contain account information
accounts_files = ['accounts', 'templates']

# The desired location of the log file (relative to config directory).
# Adding a suffix of .gpg or .asc causes the file to be encrypted 
# (otherwise it can leak account names). Use None to disable logging.
log_file = 'log.gpg'

# The desired location of the archive file (relative to config directory 
# and end the path in .gpg). Use None to disable archiving.
archive_file = 'archive.gpg'

# Various settings
default_field = 'passcode'
default_vector_field = 'questions'
display_time = 60
browsers = {
    'c': 'chrome %s',
    'f': 'firefox -new-tab %s',
    'g': 'google-chrome %s',
    't': 'torbrowser %s',
    'x': 'xdg-open %s',
}
default_browser = 'x'
required_protocols = ['https']
edit_account = (
    'vim',
    '+silent /^class {account}(Account):$/',
    '+foldopen',
    '{filepath}',
)
edit_prototype = (
    'vim',
    '+silent /{field}/',
    '+foldopen',
    '{filepath}',
)

# Information used by GPG when encrypting and decrypting files.
gpg_ids = 'ken@designers-guide.com'
gpg_armor = 'extension'
gpg_home = '~/.gnupg'
gpg_executable = '/usr/bin/gpg2'

# Utilities
xdotool_executable = '/usr/bin/xdotool'
xsel_executable = '/usr/bin/xsel'

prototype_accounts = {
    'website': """
        class _NAME_(Account): # {{{1
            aliases = ['_ALIASES_']
            username = '_USERNAME_'
            email = '_EMAIL_'
            passcode = Password()
            discovery = RecognizeURL(
                'https://_URL_',
                script='{email}{tab}{passcode}{return}'
            )
    """,
    'command': """
        class _NAME_(Account): # {{{1
            aliases = ['_ALIASES_']
            passcode = Passphrase()
            discovery = RecognizeTitle(
                '_TITLE_', '_TITLE_',
                script='{passcode}{return}'
            )
    """,
    'bank': """
        class _NAME_(Account): # {{{1
            aliases = ['_ALIASES_']
            username = '_NAME_'
            email = '_EMAIL_'
            accounts = {
                'checking':   <<_ACCOUNT_NUMBER_>>,
                'savings':    <<_ACCOUNT_NUMBER_>>,
                'creditcard': <<_ACCOUNT_NUMBER_>>,
            }
            customer_service = '_PHONE_NUMBER_'
            passcode = Password('12u2l2n2s2')
            verbal = Passphrase(length=2)
            pin = PIN()
            questions = [
                Question('_QUESTION_'),
                Question('_QUESTION_'),
                Question('_QUESTION_'),
            ]
    """,
}

